  title Mentores dispon√≠veis
header
  img(src='../assets/mentorando/Logo.png' alt='')
  a(href='/logout' class='logout')
    button(type='submit')
      img(src='../assets/mentorando/LogoutIcon.svg' alt='')
if message.mentors
  each mentor in message.mentors
    div(class='card')
      if mentor.picture
        img(src=mentor.picture alt='')
      else 
        img(src='../assets/mentorando/Mentor.png' alt='')
      h1 #{mentor.name}
      p #{mentor.work.position} - #{mentor.work.company}
      strong R$ #{mentor.hourlyRate},00
      a(href=`/scheduleEvent/${mentor._id}`)
        button
          img(src='../assets/mentorando/IconMarcarMentoria.svg' alt='')
          h2 Marcar Mentoria

